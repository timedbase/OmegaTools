{
  "name": "omegatools",
  "version": "1.0.0",
  "description": "Complete DeFi toolkit for Monad blockchain - Lock liquidity, create tokens, and multisend with ease",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:web": "pnpm --filter web dev",
    "dev:indexer": "pnpm --filter indexer dev",
    "build": "pnpm --filter web build",
    "build:web": "pnpm --filter web build",
    "build:indexer": "pnpm --filter indexer build",
    "build:contracts": "pnpm --filter contracts build",
    "test": "pnpm -r test",
    "test:contracts": "pnpm --filter contracts test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  }
}
